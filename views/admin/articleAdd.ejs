<% include ./header %>

<!-- 引入 富文本编辑器 -->
<script src="/ueditor/ueditor.config.js"></script>
<script src="/ueditor/ueditor.all.min.js"></script>

<!-- 路径导航 -->
<ol class="breadcrumb">
    <li>
        <a href="#">攻略管理</a>
    </li>
    <li class="active">发布攻略</li>
</ol>
<!-- 路径导航 END -->

<!-- 发布文章 -->
<div class="container articleAdd">
    <div class="row">
        <form action="articleInsert" method="POST" enctype="multipart/form-data">
        <div class="col-md-6">
             <div class="input-group">
                 <span class="input-group-addon">攻略栏目</span>
                 <select name="itemId" class="form-control">
                     <!-- 循环栏目列表 -->
                     <% itemlist.forEach(function(val){ %>
                         <option value="<%=val._id%>"><%=val.name%></option>
                     <% }) %>
                 </select>
             </div>
        </div>
        <div class="col-md-6">
             <div class="input-group">
                 <span class="input-group-addon">攻略标题</span>
                 <input type="text" class="form-control" name="title">
             </div>
        </div>
        <div class="col-md-6">
             <div class="input-group">
                 <span class="input-group-addon"> 作 者 </span>
                 <input type="text" class="form-control" name="author">
             </div>
        </div>
        <div class="col-md-6">
             <div class="input-group">
                 <span class="input-group-addon">攻略封面 </span>
                 <input type="file" class="form-control" name="imgurl">
             </div>
        </div>
        <div class="col-md-12">
             <div class="input-group">
                 <span class="input-group-addon"> 关 键 字 </span>
                 <input type="text" class="form-control" name="keywords">
             </div>
        </div>
        <div class="col-md-12">
             <div class="input-group">
                 <span class="input-group-addon">攻略描述</span>
                 <input type="text" class="form-control" name="description">
             </div>
        </div>
        <div class="col-md-12 content">
             <textarea name="content" id="content"></textarea>
        </div>
        <div class="col-md-6">
             <input class="reset" type="reset">
        </div>
        <div class="col-md-6">
             <input class="submit" type="submit">
        </div>
     </form>
     </div>
 </div>
 
 <script>
     // 实例化编辑器
     var ue = UE.getEditor('content');
 </script>


<% include ./footer %>